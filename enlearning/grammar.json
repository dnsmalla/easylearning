{
  "category": "Grammar",
  "description": "Grammar points organized by level",
  "levels": {
    "beginner": [
      {
        "id": "gram_beg_001",
        "title": "Present Simple - To Be",
        "pattern": "Subject + am/is/are",
        "meaning": "Used to describe states and facts",
        "usage": "I am, You are, He/She/It is, We are, They are",
        "examples": [
          {"english": "I am a student.", "translation": "Describing yourself.", "explanation": "Use 'am' with 'I'"},
          {"english": "She is happy.", "translation": "Describing someone.", "explanation": "Use 'is' with he/she/it"}
        ],
        "level": "Beginner",
        "notes": "This is the most basic verb in English."
      },
      {
        "id": "gram_beg_002",
        "title": "Present Simple - Have/Has",
        "pattern": "Subject + have/has",
        "meaning": "Used for possession",
        "usage": "I/You/We/They have, He/She/It has",
        "examples": [
          {"english": "I have a book.", "translation": "Showing possession.", "explanation": "Use 'have' with I/you/we/they"},
          {"english": "She has a car.", "translation": "Showing possession.", "explanation": "Use 'has' with he/she/it"}
        ],
        "level": "Beginner",
        "notes": "Have/has shows ownership or possession."
      },
      {
        "id": "gram_beg_003",
        "title": "Articles - A/An/The",
        "pattern": "a/an/the + noun",
        "meaning": "Words used before nouns",
        "usage": "A before consonant sounds, an before vowel sounds, the for specific things",
        "examples": [
          {"english": "I have a cat.", "translation": "One cat, not specific.", "explanation": "'a' before consonant"},
          {"english": "I saw the cat.", "translation": "A specific cat we know.", "explanation": "'the' for specific items"}
        ],
        "level": "Beginner",
        "notes": "Articles are essential in English."
      }
    ],
    "elementary": [
      {
        "id": "gram_elem_001",
        "title": "Past Simple",
        "pattern": "Subject + verb + ed (regular) / irregular form",
        "meaning": "Used for completed past actions",
        "usage": "Add -ed for regular verbs, memorize irregular forms",
        "examples": [
          {"english": "I walked to school.", "translation": "Completed action.", "explanation": "walk + ed"},
          {"english": "She went home.", "translation": "Completed action.", "explanation": "go → went (irregular)"}
        ],
        "level": "Elementary",
        "notes": "Learn common irregular verbs: go→went, see→saw, eat→ate."
      },
      {
        "id": "gram_elem_002",
        "title": "Present Continuous",
        "pattern": "Subject + am/is/are + verb-ing",
        "meaning": "Actions happening now",
        "usage": "For current or temporary actions",
        "examples": [
          {"english": "I am reading.", "translation": "Happening now.", "explanation": "am + read + ing"},
          {"english": "They are playing.", "translation": "Happening now.", "explanation": "are + play + ing"}
        ],
        "level": "Elementary",
        "notes": "Shows actions in progress."
      }
    ],
    "intermediate": [
      {
        "id": "gram_inter_001",
        "title": "Present Perfect",
        "pattern": "Subject + have/has + past participle",
        "meaning": "Actions with present relevance",
        "usage": "For experiences, recently completed actions, unspecified past time",
        "examples": [
          {"english": "I have visited Paris.", "translation": "Experience in my life.", "explanation": "have + visited"},
          {"english": "She has finished.", "translation": "Just completed.", "explanation": "has + finished"}
        ],
        "level": "Intermediate",
        "notes": "Time not specified or still relevant."
      },
      {
        "id": "gram_inter_002",
        "title": "First Conditional",
        "pattern": "If + present simple, will + base verb",
        "meaning": "Real future possibilities",
        "usage": "For likely outcomes",
        "examples": [
          {"english": "If it rains, I will stay home.", "translation": "Real possibility.", "explanation": "Present in if-clause, will in result"},
          {"english": "If you study, you will pass.", "translation": "Likely outcome.", "explanation": "Cause and effect"}
        ],
        "level": "Intermediate",
        "notes": "For realistic future scenarios."
      }
    ],
    "advanced": [
      {
        "id": "gram_adv_001",
        "title": "Second Conditional",
        "pattern": "If + past simple, would + base verb",
        "meaning": "Hypothetical situations",
        "usage": "For unlikely or imaginary situations",
        "examples": [
          {"english": "If I won the lottery, I would travel.", "translation": "Imaginary situation.", "explanation": "Past simple + would"},
          {"english": "If I were you, I would apologize.", "translation": "Giving advice.", "explanation": "Use 'were' for all persons"}
        ],
        "level": "Advanced",
        "notes": "For unreal present/future situations."
      },
      {
        "id": "gram_adv_002",
        "title": "Third Conditional",
        "pattern": "If + past perfect, would have + past participle",
        "meaning": "Hypothetical past",
        "usage": "For imagining different past outcomes",
        "examples": [
          {"english": "If I had studied, I would have passed.", "translation": "Regret about the past.", "explanation": "Past perfect + would have + pp"},
          {"english": "If she had known, she would have helped.", "translation": "Different past outcome.", "explanation": "Imagining changed past"}
        ],
        "level": "Advanced",
        "notes": "For expressing regret or analyzing past."
      }
    ],
    "proficient": [
      {
        "id": "gram_prof_001",
        "title": "Mixed Conditionals",
        "pattern": "If + past perfect, would + base verb (or vice versa)",
        "meaning": "Combining time frames",
        "usage": "Past condition → present result, or vice versa",
        "examples": [
          {"english": "If I had studied law, I would be a lawyer now.", "translation": "Past condition, present result.", "explanation": "Past perfect + would + base"},
          {"english": "If she were careful, she wouldn't have crashed.", "translation": "Present condition, past result.", "explanation": "Past simple + would have + pp"}
        ],
        "level": "Proficient",
        "notes": "Complex hypotheticals across time."
      },
      {
        "id": "gram_prof_002",
        "title": "Subjunctive Mood",
        "pattern": "Base form after certain verbs/expressions",
        "meaning": "Wishes, demands, suggestions",
        "usage": "After: suggest, recommend, insist, essential, important",
        "examples": [
          {"english": "I suggest he attend.", "translation": "Formal suggestion.", "explanation": "Base form 'attend' not 'attends'"},
          {"english": "It is essential that she be present.", "translation": "Formal requirement.", "explanation": "Base form 'be'"}
        ],
        "level": "Proficient",
        "notes": "Common in formal American English."
      }
    ]
  }
}
