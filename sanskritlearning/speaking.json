{
  "category": "speaking",
  "description": "Sanskrit speaking practice and pronunciation",
  "version": "2.0",
  "exercises": {
    "pronunciation_drills": {
      "title": "Pronunciation Practice",
      "vowels": [
        {"devanagari": "अ", "roman": "a", "pronunciation": "like 'a' in about", "audio_example": "agni"},
        {"devanagari": "आ", "roman": "ā", "pronunciation": "like 'a' in father", "audio_example": "ākāśa"},
        {"devanagari": "इ", "roman": "i", "pronunciation": "like 'i' in pin", "audio_example": "icchā"},
        {"devanagari": "ई", "roman": "ī", "pronunciation": "like 'ee' in see", "audio_example": "īśvara"}
      ],
      "consonants": {
        "ka_varga": [
          {"devanagari": "क", "roman": "ka", "articulation": "unvoiced velar"},
          {"devanagari": "ख", "roman": "kha", "articulation": "aspirated velar"},
          {"devanagari": "ग", "roman": "ga", "articulation": "voiced velar"}
        ]
      }
    },
    "conversation_practice": {
      "title": "Basic Conversations",
      "dialogues": [
        {
          "id": "greetings",
          "level": "Beginner",
          "title": "Greetings",
          "lines": [
            {"speaker": "A", "sanskrit": "नमस्ते", "romanization": "namaste", "english": "Hello"},
            {"speaker": "B", "sanskrit": "नमस्ते। कथं अस्ति?", "romanization": "namaste. kathaṃ asti?", "english": "Hello. How are you?"},
            {"speaker": "A", "sanskrit": "अहं कुशली अस्मि। त्वम्?", "romanization": "ahaṃ kuśalī asmi. tvam?", "english": "I am well. You?"},
            {"speaker": "B", "sanskrit": "अहम् अपि कुशली अस्मि।", "romanization": "aham api kuśalī asmi.", "english": "I am also well."}
          ]
        },
        {
          "id": "introduction",
          "level": "Beginner",
          "title": "Introduction",
          "lines": [
            {"speaker": "A", "sanskrit": "तव नाम किम्?", "romanization": "tava nāma kim?", "english": "What is your name?"},
            {"speaker": "B", "sanskrit": "मम नाम रामः। तव नाम किम्?", "romanization": "mama nāma rāmaḥ. tava nāma kim?", "english": "My name is Rama. What is your name?"},
            {"speaker": "A", "sanskrit": "मम नाम सीता।", "romanization": "mama nāma sītā.", "english": "My name is Sita."}
          ]
        },
        {
          "id": "classroom",
          "level": "Elementary",
          "title": "In the Classroom",
          "lines": [
            {"speaker": "Teacher", "sanskrit": "त्वं किं पठसि?", "romanization": "tvaṃ kiṃ paṭhasi?", "english": "What are you studying?"},
            {"speaker": "Student", "sanskrit": "अहं संस्कृतं पठामि।", "romanization": "ahaṃ saṃskṛtaṃ paṭhāmi.", "english": "I am studying Sanskrit."},
            {"speaker": "Teacher", "sanskrit": "साधु! त्वं बुद्धिमान् छात्रः असि।", "romanization": "sādhu! tvaṃ buddhimān chātraḥ asi.", "english": "Good! You are an intelligent student."}
          ]
        }
      ]
    },
    "reading_aloud": {
      "title": "Reading Practice",
      "passages": [
        {
          "level": "Beginner",
          "text": "अहं रामः अस्मि। अहं छात्रः अस्मि।",
          "romanization": "ahaṃ rāmaḥ asmi. ahaṃ chātraḥ asmi.",
          "tips": ["Pronounce each word clearly", "Pay attention to vowel length"]
        },
        {
          "level": "Intermediate",
          "text": "योगः चित्तवृत्तिनिरोधः।",
          "romanization": "yogaḥ cittavṛttinirodhaḥ.",
          "tips": ["Practice the conjunct consonants", "Maintain proper rhythm"]
        }
      ]
    },
    "chanting": {
      "title": "Sanskrit Chanting",
      "mantras": [
        {
          "name": "Gāyatrī Mantra",
          "sanskrit": "ॐ भूर्भुवः स्वः। तत्सवितुर्वरेण्यं भर्गो देवस्य धीमहि। धियो यो नः प्रचोदयात्॥",
          "romanization": "oṃ bhūrbhuvaḥ svaḥ. tatsaviturvareṇyaṃ bhargo devasya dhīmahi. dhiyo yo naḥ pracodayāt.",
          "meaning": "We meditate on the glory of the Creator who has created the universe, who is worthy of worship, who is the embodiment of knowledge and light, who is the remover of all sin and ignorance. May He enlighten our intellect.",
          "level": "Advanced"
        },
        {
          "name": "Śānti Mantra",
          "sanskrit": "ॐ सह नाववतु। सह नौ भुनक्तु। सह वीर्यं करवावहै। तेजस्वि नावधीतमस्तु मा विद्विषावहै॥ ॐ शान्तिः शान्तिः शान्तिः॥",
          "romanization": "oṃ saha nāvavatu. saha nau bhunaktu. saha vīryaṃ karavāvahai. tejasvi nāvadhītamastu mā vidviṣāvahai. oṃ śāntiḥ śāntiḥ śāntiḥ.",
          "meaning": "May He protect us both together; may He nourish us both together; may we work conjointly with great energy; may our study be vigorous and effective; may we not mutually dispute. Om peace, peace, peace.",
          "level": "Intermediate"
        }
      ]
    }
  }
}
