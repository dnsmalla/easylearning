  "grammar": [
    {
      "id": "grammar_001",
      "title": "Sanskrit Sentence Structure (SOV)",
      "pattern": "Subject + Object + Verb",
      "meaning": "Basic word order in Sanskrit",
      "usage": "Sanskrit typically follows SOV order",
      "examples": [
        {
          "sanskrit": "बालकः पुस्तकं पठति।",
          "romanization": "bālakaḥ pustakaṃ paṭhati",
          "english": "The boy reads a book.",
          "breakdown": "boy (subject) + book (object) + reads (verb)"
        }
      ],
      "level": "Beginner",
      "notes": "Unlike English (SVO), Sanskrit places the verb at the end",
      "related_concepts": ["word_order", "syntax"]
    },
    {
      "id": "grammar_002",
      "title": "The Three Genders (liṅga)",
      "pattern": "Masculine (पुंलिङ्ग), Feminine (स्त्रीलिङ्ग), Neuter (नपुंसकलिङ्ग)",
      "meaning": "Every noun has a gender",
      "usage": "Gender affects noun and adjective endings",
      "examples": [
        {
          "sanskrit": "सुन्दरः बालकः",
          "romanization": "sundaraḥ bālakaḥ",
          "english": "beautiful boy (masculine)"
        },
        {
          "sanskrit": "सुन्दरा बालिका",
          "romanization": "sundarā bālikā",
          "english": "beautiful girl (feminine)"
        },
        {
          "sanskrit": "सुन्दरं पुष्पम्",
          "romanization": "sundaraṃ puṣpam",
          "english": "beautiful flower (neuter)"
        }
      ],
      "level": "Beginner",
      "notes": "Adjectives must agree with noun gender",
      "related_concepts": ["agreement", "declension"]
    },
    {
      "id": "grammar_003",
      "title": "The Eight Cases (vibhakti)",
      "pattern": "Eight grammatical cases show relationships",
      "meaning": "Cases indicate the role of nouns in sentences",
      "usage": "प्रथमा (subject), द्वितीया (object), तृतीया (with), चतुर्थी (for), पञ्चमी (from), षष्ठी (of), सप्तमी (in), सम्बोधन (address)",
      "examples": [
        {
          "sanskrit": "बालकः (प्रथमा)",
          "romanization": "bālakaḥ (prathamā)",
          "english": "the boy (subject/nominative)"
        },
        {
          "sanskrit": "बालकं (द्वितीया)",
          "romanization": "bālakaṃ (dvitīyā)",
          "english": "the boy (object/accusative)"
        }
      ],
      "level": "Beginner",
      "notes": "Sanskrit has 8 cases vs Latin's 6 or English's remnant cases",
      "related_concepts": ["declension", "nominal_endings"]
    },
    {
      "id": "grammar_004",
      "title": "Present Tense (vartamāna)",
      "pattern": "Root + Present endings",
      "meaning": "Describes current or habitual actions",
      "usage": "Formed by adding endings to verb stems",
      "examples": [
        {
          "sanskrit": "पठ् → पठामि",
          "romanization": "paṭh → paṭhāmi",
          "english": "read → I read"
        },
        {
          "sanskrit": "पठ् → पठसि",
          "romanization": "paṭh → paṭhasi",
          "english": "read → you read"
        },
        {
          "sanskrit": "पठ् → पठति",
          "romanization": "paṭh → paṭhati",
          "english": "read → he/she reads"
        }
      ],
      "level": "Beginner",
      "notes": "One of the special tense-moods (laṭ lakāra)",
      "related_concepts": ["verb_classes", "conjugation"]
    },
    {
      "id": "grammar_005",
      "title": "Sandhi - Sound Combination",
      "pattern": "Two sounds combine and change",
      "meaning": "Rules for combining sounds at word boundaries",
      "usage": "When words meet, their sounds may change",
      "examples": [
        {
          "sanskrit": "रामः + अपि → रामोऽपि",
          "romanization": "rāmaḥ + api → rāmo'pi",
          "english": "Rama + also → Rama also"
        },
        {
          "sanskrit": "सः + गच्छति → स गच्छति",
          "romanization": "saḥ + gacchati → sa gacchati",
          "english": "he + goes → he goes"
        }
      ],
      "level": "Beginner",
      "notes": "Essential for reading and understanding Sanskrit texts",
      "related_concepts": ["vowel_sandhi", "visarga_sandhi", "consonant_sandhi"]
    }
  ],
