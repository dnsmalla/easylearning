{
  "category": "practice",
  "description": "Comprehensive practice exercises for all skills",
  "version": "2.0",
  "exercises": {
    "writing_practice": {
      "title": "Devanagari Writing Practice",
      "description": "Practice writing Sanskrit characters",
      "levels": {
        "beginner": [
          {"character": "अ", "type": "vowel", "stroke_order": ["Start top-left, curve down and right"], "practice_words": ["अग्नि", "अम्बा"]},
          {"character": "क", "type": "consonant", "stroke_order": ["Horizontal line, vertical line, curve"], "practice_words": ["कमल", "कृष्ण"]},
          {"character": "न", "type": "consonant", "stroke_order": ["Curved top, vertical line with tail"], "practice_words": ["नमस्ते", "नदी"]}
        ],
        "elementary": [
          {"character": "त्र", "type": "conjunct", "components": ["त", "र"], "practice_words": ["मित्र", "पत्र"]},
          {"character": "ज्ञ", "type": "conjunct", "components": ["ज", "ञ"], "practice_words": ["ज्ञान", "विज्ञान"]}
        ]
      }
    },
    "listening_comprehension": {
      "title": "Listening & Comprehension",
      "description": "Practice understanding spoken Sanskrit",
      "exercises": [
        {
          "id": "listen_001",
          "level": "Beginner",
          "audio_text": "अहं रामः अस्मि।",
          "romanization": "ahaṃ rāmaḥ asmi",
          "english": "I am Rama",
          "questions": [
            {"question": "What is the speaker's name?", "answer": "Rama"},
            {"question": "What language is being spoken?", "answer": "Sanskrit"}
          ]
        }
      ]
    },
    "translation_practice": {
      "title": "Translation Exercises",
      "description": "Translate between Sanskrit and English",
      "levels": {
        "beginner": [
          {"sanskrit": "अहं गच्छामि।", "english": "I go.", "romanization": "ahaṃ gacchāmi"},
          {"sanskrit": "सः पठति।", "english": "He reads.", "romanization": "saḥ paṭhati"},
          {"sanskrit": "सा गायति।", "english": "She sings.", "romanization": "sā gāyati"}
        ],
        "elementary": [
          {"sanskrit": "बालकः विद्यालयं गच्छति।", "english": "The boy goes to school.", "romanization": "bālakaḥ vidyālayaṃ gacchati"},
          {"sanskrit": "माता पुत्रं पश्यति।", "english": "The mother sees the son.", "romanization": "mātā putraṃ paśyati"}
        ],
        "intermediate": [
          {"sanskrit": "गुरुः शिष्यान् धर्मं शिक्षयति।", "english": "The teacher instructs the students in dharma.", "romanization": "guruḥ śiṣyān dharmaṃ śikṣayati"}
        ]
      }
    },
    "grammar_drills": {
      "title": "Grammar Practice",
      "description": "Focused grammar exercises",
      "categories": {
        "declensions": [
          {
            "noun": "राम",
            "gender": "masculine",
            "stem_type": "-a",
            "practice": "Decline in all 8 cases, singular"
          }
        ],
        "conjugations": [
          {
            "root": "√पठ्",
            "class": "1 (bhū class)",
            "tense": "present",
            "practice": "Conjugate in all persons, singular"
          }
        ],
        "sandhi": [
          {
            "type": "vowel sandhi",
            "rule": "a + a = ā",
            "examples": ["रामः + अत्र = रामात्र"]
          }
        ]
      }
    },
    "vocabulary_building": {
      "title": "Vocabulary Expansion",
      "description": "Build your Sanskrit vocabulary systematically",
      "themed_lists": {
        "daily_life": ["भोजनम् (food)", "पानम् (drink)", "वस्त्रम् (clothes)", "गृहम् (house)"],
        "nature": ["सूर्यः (sun)", "वृक्षः (tree)", "नदी (river)", "पर्वतः (mountain)"],
        "emotions": ["सुखम् (happiness)", "दुःखम् (sorrow)", "क्रोधः (anger)", "प्रेम (love)"]
      }
    },
    "composition": {
      "title": "Sanskrit Composition",
      "description": "Create your own Sanskrit sentences and paragraphs",
      "prompts": {
        "beginner": [
          "Introduce yourself (name, where you live)",
          "Describe your family",
          "Talk about what you study"
        ],
        "intermediate": [
          "Describe a daily routine",
          "Write about a festival",
          "Narrate a simple story"
        ],
        "advanced": [
          "Write a philosophical reflection",
          "Compose a descriptive passage",
          "Create dialogue between characters"
        ]
      }
    }
  }
}
